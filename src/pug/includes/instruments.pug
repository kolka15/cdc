div.instruments
    div.page-wrapper
        h2.title-1.text-center.instruments__title Инструменты
        div.row.m-0
            div.col-12.col-lg-5.text-center.text-lg-left.order-1.order-lg-0
                img.instruments__side-img(src='/img/raster/phones.png', alt='phones')
            div.col-12.col-lg-7.order-0.order-lg-1.mb-5.mb-lg-0
                div.swiper-container.js-swiper-type-1.swiper-type-1
                    div.swiper-wrapper
                        +slide
                        +slide
                        +slide
                        +slide
                        +slide

                    div.swiper-controls.d-none.d-lg-flex
                        div.swiper-button-prev
                            <svg class="svg-arrow-dims">
                            <use xlink:href="/img/vector/sprite-symbol.svg#arrow"></use>
                            </svg>

                        div.swiper-button-next
                            <svg class="svg-arrow-dims">
                            <use xlink:href="/img/vector/sprite-symbol.svg#arrow"></use>
                            </svg>

                    div.swiper-pagination.d-lg-none





