- directions.push({title:'Проектный офис / внешний монитор', icon: 'monitor'})
- directions.push({title:'Аудит и мониторинг цифровой среды', icon: 'chart'})
- directions.push({title:'Документирование проектови работ', icon: 'scroll'})
- directions.push({title:'Аудит отчетной качественных материалов', icon: 'monitor-check'})
